{
    "name": "rome",
    "version": "0.8.0-next",
    "bin": "bin/rome",
    "scripts": {
        "postinstall": "node scripts/postinstall.js",
        "tsc": "tsc --noEmit",
        "format": "cargo rome-cli-dev format ./src --write",
        "check": "cargo rome-cli-dev check ./src"
    },
    "homepage": "https://rome.tools",
    "author": "Sebastian McKenzie",
    "bugs": "https://github.com/rome/tools/issues",
    "description": "Rome is a toolchain for the web: formatter, linter and more",
    "files": [
        "bin/rome",
        "scripts/postinstall.js",
        "README.md"
    ],
    "keywords": [
        "JavaScript",
        "TypeScript",
        "format",
        "lint",
        "toolchain"
    ],
    "engines": {
        "node": ">=14.*"
    },
    "license": "MIT",
    "devDependencies": {
        "typescript": "^4.7.4"
    }
}