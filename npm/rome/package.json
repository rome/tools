{
    "name": "rome",
    "version": "0.8.0-next",
    "bin": "bin/rome",
    "scripts": {
        "postinstall": "node scripts/postinstall.js",
        "tsc": "tsc --noEmit",
        "format": "cargo rome-cli-dev format ./ --write",
        "ci": "cargo rome-cli-dev ci ./src && pnpm test:ci && tsc --noEmit",
        "check": "cargo rome-cli-dev check ./src && tsc --noEmit",
        "test": "vitest",
        "test:ci": "vitest --run",
        "build": "tsc "
    },
    "main": "./dist/index.js",
    "homepage": "https://rome.tools",
    "author": "Sebastian McKenzie",
    "bugs": "https://github.com/rome/tools/issues",
    "description": "Rome is a toolchain for the web: formatter, linter and more",
    "files": [
        "bin/rome",
        "scripts/postinstall.js",
        "README.md"
    ],
    "keywords": [
        "JavaScript",
        "TypeScript",
        "format",
        "lint",
        "toolchain"
    ],
    "engines": {
        "node": ">=14.*"
    },
    "license": "MIT",
    "devDependencies": {
        "typescript": "^4.7.4",
        "vitest": "^0.22.0",
        "vite": "^3.0.8"
    }
}