require("./_setup.cjs");

const child_process = require("child_process");
const {execDev, writtenFiles} = require("./_utils.cjs");

// Generate files
require("./runtime-modules/update.cjs");
require("./ast/update.cjs");
require("./lint/update.cjs");

// Autofix them
execDev(["lint", ...writtenFiles, "--save"]);

// Check that `git status` is fine
const out = child_process
	.spawnSync("git", ["ls-files", "-m"])
	.stdout.toString();
if (out !== "") {
	console.error("Modified files:");
	console.error(out);
	process.exit(1);
}
