{
  "name": "rome-root",
  "license": "MIT",
  "version": "0.0.25",
  "engines": {
    "node": ">=12.0.0"
  },
  "//": "Look! No deps!",
  "dependencies": {},
  "///": "Only used for static type checking",
  "devDependencies": {
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/vscode": "^1.45.0",
    "typescript": "^3.8.3"
  },
  "romeLSPBin": "./scripts/vendor-rome",
  "scripts": {
    "dev-rome": "node ./scripts/dev-rome",
    "test": "node ./scripts/dev-rome test",
    "lint": "node ./scripts/dev-rome lint",
    "fix": "node ./scripts/dev-rome --fix"
  },
  "rome": {
    "root": true,
    "bundler": {
      "mode": "modern"
    },
    "lint": {
      "ignore": [
        "build",
        "coverage",
        "node_modules",
        "core/static",
        "resources",
        "test-fixtures",
        "vendor",
        "type-libs",
        "lib/modules.js",
        "prelude.ts",
        "website",
        "@romejs-web",
        "out",
        "vscode/node_modules"
      ]
    }
  }
}