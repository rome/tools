        "ignore": {
          "description": "A list of Unix shell style patterns. The formatter will ignore files/folders that will match these patterns.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        },
        "indentSize": {
          "description": "The size of the indentation, 2 by default",
          "default": 2,
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
