---
layout: layouts/base.liquid
---

{% assign post = collections.post | reverse | first %}

<article class="latest-post">
	<h2>Latest blog post</h2>
	<div class="info">
		<h3>
		 <a href="{{ post.url }}">{{ post.data.title }}</a>
		</h3>
		<div class="author">
			by
			{% if post.data.author_url %}
				<a href="{{ post.data.author_url }}">{{ post.data.author_name }}</a>
			{% else %}
				{{ post.data.author_name }}
			{% endif %}
			at {{ post.date | dateFormat }}
		</div>
	</div>
</article>

<div class="hero">
	<h1>The Rome Frontend Toolchain</h1>
	<h2>Standardizing the web development experience</h2>
</div>

<main id="main-content" class="content homepage">
	{{ content | safe }}
</main>
