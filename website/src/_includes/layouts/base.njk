<!doctype html>
<html data-theme="light" lang="en">
	{% include "./sections/head.njk" %}
  <body>
    <div class="container">
      <div class="skip-to-content">
        <a href="#main-content">Skip to main content</a>
      </div>

      <div class="header-mobile">
        <a class="logo" href="{{ '/' | url }}">

          {% include "./svg/rome-logo.njk" %}

          <span class="logo-text">Rome</span>
        </a>
        <div class="stretch"></div>
        <a href="#" class="mobile-handle">
          <span class="sr-only">Mobile handle</span>
          {% include "./svg/mobile-handle.njk" %}
        </a>
      </div>

      <div class="sidebar">
        <div class="header-desktop">
          <a class="logo" href="{{ '/' | url }}">
            {% include "./svg/rome-logo.njk" %}
            <h1 class="logo-text">Rome</h1>
          </a>
        </div>

        <nav aria-labelledby="external-links" class="menu external-links">
          <h2 id="external-links" class="sr-only">External Links</h2>
          <ul>
          <li>
            <a target="_blank" rel="noopener" href="https://github.com/romejs/rome">
              <span class="sr-only">GitHub Repo</span>
              {% include "./svg/github.njk" %}
            </a>
          </li>
          <li>
            <a target="_blank" rel="noopener" href="https://twitter.com/romejsdev">
              <span class="sr-only">Twitter Account</span>
              {% include "./svg/twitter.njk" %}
            </a>
          </li>
          <li>
            <a target="_blank" rel="noopener" href="https://opencollective.com/romejs">
              <span class="sr-only">Open Collective</span>
              {% include "./svg/open-collective.njk" %}
            </a>
          </li>
          </ul>
        </nav>

        <nav aria-labelledby="site-navigation" class="menu">
          <h2 id="site-navigation" class="sr-only">Site Navigation</h2>
          <ul>
            <li>
              <a href="{{ '/posts' | url }}">Blog</a>
            </li>
            <li>
              <a href="{{ '/lint/rules' | url }}">Lint Rules</a>
            </li>
          </ul>
        </nav>

        <nav aria-labelledby="page-navigation" class="table-of-contents">
          <h2 id="page-navigation" class="sr-only">Page Navigation</h2>
          <div class="toc-container">
            {{ content | toc(tags=['h1', 'h2'], wrapper='div  ', wrapperClass='fixed toc')  | safe }}
          </div>
        </nav>

        <div class="mode-switch-container">
          <button id="mode-switch" class="mode-switch">
            Dark Mode
          </button>
        </div>
      </div>
      <div class="main">
        <div class="overlay"></div>

        {% if showHero %}
          {% include "./sections/hero.njk" %}
        {% endif %}

        <main id="main-content" class="content">
          {{ content | safe }}
        </main>
      </div>
    </div>

		{% include "./sections/footer.njk" %}
  </body>
</html>
