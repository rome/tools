{
		"name": "rome-website",
		"private": true,
		"scripts": {
				"start": "astro dev",
				"format": "cargo rome-cli-dev format --write .",
				"tsc": "tsc --skipLibCheck",
				"check": "cargo rome-cli-dev check ./",
				"check:apply": "cargo rome-cli-dev check ./ --apply-unsafe",
				"start:playground": "pnpm build:wasm-dev && pnpm start",
				"build": "pnpm build:wasm && pnpm build:js",
				"build:js": "astro build",
				"build:wasm": "wasm-pack build --out-dir ../../npm/wasm-web --target web --release --scope rometools ../crates/rome_wasm",
				"build:wasm-dev": "wasm-pack build --out-dir ../../npm/wasm-web --target web --dev --scope rometools ../crates/rome_wasm"
		},
		"devDependencies": {
				"@astrojs/mdx": "^0.17.2",
				"@astrojs/prism": "^2.0.0",
				"@astrojs/react": "^2.0.2",
				"@astrojs/rss": "^2.1.1",
				"@codemirror/lang-javascript": "^6.1.0",
				"@codemirror/lang-json": "^6.0.1",
				"@codemirror/lint": "^6.0.0",
				"@codemirror/state": "6.1.2",
				"@codemirror/view": "6.4.0",
				"@docsearch/css": "^3.3.0",
				"@docsearch/js": "^3.3.0",
				"@fontsource/inter": "^4.5.14",
				"@rometools/wasm-web": "../npm/wasm-web",
				"@types/mermaid": "^9.1.0",
				"@types/node": "^18.11.3",
				"@types/prettier": "^2.7.1",
				"@types/react": "^17.0.33",
				"@types/react-dom": "^17.0.10",
				"@uiw/react-codemirror": "^4.12.4",
				"@vitejs/plugin-react": "^2.1.0",
				"astro": "^2.0.17",
				"astro-compress": "^1.1.35",
				"autoprefixer": "^10.4.12",
				"codemirror-lang-rome-ast": "0.0.6",
				"fast-diff": "^1.2.0",
				"globby": "^13.1.2",
				"hast-util-to-html": "^8.0.3",
				"lang-rome-formatter-ir": "0.0.2",
				"mdast-util-to-hast": "^12.2.4",
				"mermaid": "^9.2.2",
				"prettier": "^2.8.0",
				"react": "^17.0.2",
				"react-dom": "^17.0.2",
				"rehype-autolink-headings": "^6.1.1",
				"rehype-slug": "^5.1.0",
				"rehype-toc": "^3.0.2",
				"remark-toc": "^8.0.1",
				"rome": "^10.0.1",
				"sass": "^1.56.1",
				"typescript": "^4.8.4",
				"vite": "3.1.8",
				"vite-plugin-svgr": "^2.2.2"
		}
}
