{
	"name": "rome-website",
	"private": true,
	"scripts": {
		"build": "node-sass --style=compressed --functions sass-functions.js src/styles/index.scss src/_includes/styles.css && cross-env ELEVENTY_ENV=production eleventy",
		"build:styles": "node-sass --style=compressed --functions sass-functions.js src/styles/index.scss src/_includes/styles.css",
		"start": "npm-run-all build:styles --parallel watch:*",
		"watch:eleventy": "eleventy --serve",
		"watch:sass": "npm run build:styles -- --watch"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
		"eleventy-plugin-nesting-toc": "^1.2.0",
		"markdown-it-anchor": "^5.3.0",
		"@11ty/eleventy-navigation": "^0.1.6",
		"npm-run-all": "^4.1.5",
		"cross-env": "^7.0.2",
		"terser": "^4.8.0",
		"clean-css": "^4.2.3",
		"docsearch.js": "^2.6.3",
		"html-minifier": "^4.0.0",
		"node-sass": "^4.14.1"
	},
	"rome": {
		"extends": "../package.json",
		"bundler": {
			"externals": [
				"@11ty/eleventy-plugin-syntaxhighlight",
				"@11ty/eleventy-navigation",
				"markdown-it",
				"markdown-it-anchor",
				"eleventy-plugin-sass",
				"eleventy-plugin-nesting-toc",
				"gray-matter",
				"prismjs/plugins/autolinker/prism-autolinker",
				"terser",
				"clean-css",
				"html-minifier",
				"node-sass"
			]
		}
	}
}
