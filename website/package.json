{
	"name": "rome-website",
	"private": true,
	"scripts": {
		"build": "sass --style=compressed src/styles:src/_includes/styles && cross-env ELEVENTY_ENV=production eleventy",
		"build:styles": "sass --style=compressed src/styles:src/_includes/styles",
		"start": "npm-run-all watch:* build:styles",
		"watch:eleventy": "eleventy --serve",
		"watch:sass": "pnpm build:styles -- --watch",
		"format": "rome format --write ."
	},
	"devDependencies": {
		"@types/node": "^18.6.1",
		"@11ty/eleventy": "^1.0.1",
		"@11ty/eleventy-navigation": "^0.3.3",
		"@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
		"@types/markdown-it": "^12.2.3",
		"clean-css": "^4.2.4",
		"cross-env": "^7.0.3",
		"docsearch.js": "^2.6.3",
		"dotenv": "^16.0.0",
		"eleventy-plugin-nesting-toc": "^1.3.0",
		"html-minifier": "^4.0.0",
		"markdown-it": "^13.0.1",
		"markdown-it-anchor": "^8.6.4",
		"markdown-it-header-sections": "^1.0.0",
		"markdown-it-imsize": "^2.0.1",
		"sass": "^1.49.9",
		"rome": "next",
		"terser": "^4.8.0",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.2",
		"npm-run-all": "^4.1.5"
	},
	"dependencies": {
		"markdown-it-footnote": "^3.0.3"
	}
}
