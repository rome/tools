{
	"name": "rome-website",
	"private": true,
	"scripts": {
		"build": "node-sass --style=compressed src/styles:src/_includes/styles && cross-env ELEVENTY_ENV=production eleventy",
		"build:styles": "sass --style=compressed src/styles:src/_includes/styles",
		"start": "npm-run-all build:styles --parallel watch:*",
		"watch:eleventy": "eleventy --serve",
		"watch:sass": "npm run build:styles -- --watch --recursive"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@11ty/eleventy-navigation": "^0.1.6",
		"@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
		"clean-css": "^4.2.3",
		"cross-env": "^7.0.2",
		"docsearch.js": "^2.6.3",
		"dotenv": "^8.2.0",
		"eleventy-plugin-nesting-toc": "^1.2.0",
		"html-minifier": "^4.0.0",
		"markdown-it-anchor": "^5.3.0",
		"markdown-it-header-sections": "^1.0.0",
		"markdown-it-imsize": "^2.0.1",
		"sass": "^1.49.9",
		"npm-run-all": "^4.1.5",
		"terser": "^4.8.0"
	},
	"rome": {
		"extends": "../package.json",
		"lint": {
			"globals": [
				"Stripe",
				"Sentry"
			]
		},
		"bundler": {
			"externals": [
				"@11ty/eleventy-plugin-syntaxhighlight",
				"@11ty/eleventy-navigation",
				"markdown-it",
				"markdown-it-header-sections",
				"markdown-it-anchor",
				"eleventy-plugin-sass",
				"eleventy-plugin-nesting-toc",
				"gray-matter",
				"prismjs/plugins/autolinker/prism-autolinker",
				"terser",
				"clean-css",
				"html-minifier",
				"node-sass",
				"markdown-it-imsize",
				"@sentry/node",
				"stripe",
				"pg",
				"morgan",
				"node-fetch",
				"express",
				"body-parser",
				"dotenv"
			]
		}
	}
}
