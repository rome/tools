{
	"$schema": "./npm/rome/configuration_schema.json",
	"files": {
		"ignore": [
			"website/build",
			"dist",
			"target"
		]
	},
	"formatter": {
		"ignore": [
			"configuration-schema.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
